{
  "Urls": "http://0.0.0.0:5051", 
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
          "Microsoft.Extensions.Hosting": "Warning",
          "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { 
      	"Name": "MongoDBBson", 
        "Args": { 
            "databaseUrl": "mongodb://root:example@localhost:27017/a3-mongodb-1?authSource=admin",
            "collectionName": "logs",
            "cappedMaxSizeMb": "1024",
            "cappedMaxDocuments": "50000",
            "rollingInterval": "Month"
        }
      } 
    ]
  },
  "JWT": {
    "Issuer": "Bakery",
    "Audience": "Bakery",
    "SigningKey": "MyVerySecretSignInKey12345678910"
  },
  "ConnectionStrings": {
    "DefaultDB": "Server=BakeryDB;User Id=sa;Password=SecretPassword123;TrustServerCertificate=True",
    "MongoDb": "mongodb://root:example@mongodb:27017/a3-mongodb-1?authSource=admin"
  }
}
